{
    "name": "tapperphp/tapper",
    "description": "PHP easy debugging tool",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Tapper\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "authors": [
        {
            "name": "Mateusz Cholewka",
            "email": "mateusz@cholewka.com.pl"
        }
    ],
    "require": {
        "react/event-loop": "^1.5",
        "php-tui/php-tui": "^0.2.1",
        "react/socket": "^1.16",
        "clue/ndjson-react": "^1.3",
        "php-di/php-di": "^7.0"
    },
    "require-dev": {
        "laravel/pint": "^1.21",
        "pestphp/pest": "^3.8"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "bin": [
        "bin/tapper"
    ],
    "scripts": {
        "test:unit": "pest"
    }
}
